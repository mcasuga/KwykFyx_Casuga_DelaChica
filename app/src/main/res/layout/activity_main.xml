<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.kwykfyxapp.kwykfyx.MainActivity">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_car" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="What seems to be the problem?"
            android:textColor="#000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/main_searchQueryEditText"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_searchButton"
            android:layout_gravity="center"
            android:text="Search" />
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/main_findMechanicButton"
                android:text="Find Mechanic" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/main_browseButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Browse" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

